{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node16",
    "moduleResolution": "Node16",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
